{
  "name": "media-service",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "start": "node --use_strict dist",
    "build": "rm -rf dist && tsc --p ./tsconfig.build.json",
    "build:dev": "npm run build && npm run start",
    "dev": "npx nodemon --config nodemon.json --quiet --exec \"npm run build:dev\"",
    "lint": "eslint --ignore-path .gitignore ./src --ext .ts",
    "lint:fix": "npm run lint -- --fix",
    "test:unit": "jest",
    "doc:build": "apidoc-markdown -i src -o documentation/README.md",
    "prepare": "husky install ",
    "pre:commit": "validate-commit-msg",
    "pre:push": "npm run lint && npm run test:unit && npm run doc:build"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@fastify/cookie": "^6.0.0",
    "@fastify/cors": "^8.2.0",
    "@fastify/formbody": "^7.4.0",
    "@types/body-parser": "^1.19.2",
    "@types/cors": "^2.8.12",
    "@types/fastify-multipart": "^0.7.0",
    "@types/jest": "^27.5.2",
    "@types/joi": "^17.2.3",
    "@types/node": "^18.14.2",
    "@typescript-eslint/eslint-plugin": "^5.54.0",
    "@typescript-eslint/parser": "^5.54.0",
    "eslint": "^8.35.0",
    "husky": "^8.0.0",
    "jest": "^27.5.1",
    "ts-jest": "^27.1.4",
    "ts-loader": "^9.2.8",
    "ts-stream": "^3.0.0",
    "typescript": "^4.9.5",
    "typescript-eslint": "0.0.1-alpha.0",
    "validate-commit": "^3.4.0"
  },
  "dependencies": {
    "dotenv": "^16.0.1",
    "fastify": "^4.12.0",
    "fastify-multer": "^2.0.3",
    "fs": "0.0.1-security",
    "http-status": "^1.5.2",
    "joi": "^17.8.3",
    "npm": "^9.2.0",
    "stream": "0.0.2",
    "util": "^0.12.5"
  },
  "pre-push": [
    "lint",
    "test:unit",
    "doc:build"
  ]
}
