{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "dist",
    "rootDir": "src",
    "baseUrl": ".",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": [
      "jest"
    ],
  },
  "includes": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "test"
  ]
}